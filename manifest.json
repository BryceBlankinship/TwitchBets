{
    "name": "TwitchBets",
    "description": "Bet on your favorite twitch streamers.",
    "version": "1.0",
    "manifest_version": 3,
    "background": {
      "service_worker": "js/background.js"
    },
    "permissions": [
      "tabs",
      "storage",
      "activeTab",
      "scripting"
    ],
    "action": {
      "default_popup": "html/main.html",
      "default_icon": "images/icon.png"
    },
    "icons": {
      "32": "images/icon.png"
    },
    "web_accessible_resources": [{
        "resources": ["images/*.png",
        "images/*.svg",
        "css/main.css",
        "js/main.js",
        "html/main.html",
        "html/streamoverview.html",
        "js/streamoverview.js"],
        "matches": ["<all_urls>"]
    }]
  }